<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>validation_plugin</artifactId>
    <groupId>net.sf.xpontus.plugins.validation</groupId>
    <version>1.0.0-pre1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sf.xpontus.plugins.validation.schemavalidation</groupId>
  <artifactId>schemavalidation_plugin</artifactId>
  <name>Schema Validation Plugin</name>
  <version>1.0.0-pre1</version> 
  <description>XPontus plugin for validation of files against schemas</description>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
            <groupId>net.sf.xpontus</groupId>
            <artifactId>xpontus_core</artifactId>
            <version>1.0.0-pre1</version>
            <scope>compile</scope>
        </dependency>
    <dependency>
            <groupId>msv</groupId>
            <artifactId>msv</artifactId>
            <version>20050913</version>
            <scope>compile</scope>
        </dependency>
    <dependency>
            <groupId>msv</groupId>
            <artifactId>isorelax</artifactId>
            <version>20050913</version>
            <scope>compile</scope>
        </dependency>
    <dependency>
            <groupId>msv</groupId>
            <artifactId>relaxngDatatype</artifactId>
            <version>20050913</version>
            <scope>compile</scope>
        </dependency>
    <dependency>
            <groupId>msv</groupId>
            <artifactId>xsdlib</artifactId>
            <version>20050913</version>
            <scope>compile</scope>
        </dependency>
  </dependencies>
  <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>*/**.java</exclude>
                    <exclude>*/**.form</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>  
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>iso-8859-1</encoding>
                    <source>1.4</source>
                    <target>1.4</target>   
                </configuration>
            </plugin> 
        </plugins>
    </build>    
</project>
